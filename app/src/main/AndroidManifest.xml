<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.socialmap.yy.travelbox">
    <uses-sdk android:minSdkVersion="11"/>
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Baidu地图需要的权限 -->
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 此权限用来显示反馈崩溃信息对话框 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 判断堆栈中是否有本应用的权限 -->
    <uses-permission android:name="android.permission.GET_TASKS" />

















    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <!--<meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="BFp0X5sHwLd8jm1nHjQZrbWX" />-->

        <!-- yy -->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="TdMUELrHWc2osaolQM9jZePX" />


        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".schedule.ScheduleActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".team.AllTeamActivity"
            android:label="@string/app_name"/>
        <activity android:name=".MainActivity">
            android:windowSoftInputMode="adjustPan"
        </activity>

        <service android:name=".service.AccountService">
            <intent-filter>
                <action android:name="com.socialmap.yy.travelbox.ACCOUNT_SERVICE" />
            </intent-filter>
        </service>
        <service android:name="com.baidu.location.f" android:enabled="true" android:process=":remote">
            <intent-filter>
                <action android:name="com.baidu.location.service_v2.2" >
                </action>
            </intent-filter>
        </service>
        <activity
            android:name=".schedule.ScheduleLocalActivity"
            android:label="@string/app_name" />
        <activity android:name=".account.NearbyActivity" />
        <activity android:name=".account.ProfileActivity" />
        <activity android:name=".settings.SettingTabActivity" />
        <activity android:name=".ComplainActivity" />
        <activity android:name=".account.MessageActivity" />
        <activity android:name=".account.RegisterActivity" />
        <activity android:name=".account.FriendsActivity" />
        <activity android:name=".account.FootprintActivity" />
        <activity android:name=".account.LocationManagerActivity" />
        <activity android:name=".team.TeamDetailActivity" />
        <activity android:name=".team.TeamFindActivity" />
        <activity android:name=".team.TeamGatherActivity" />
        <activity android:name=".team.TeamHistoryActivity" />
        <activity android:name=".account.NearbypoiActivity"
        android:configChanges="orientation|keyboardHidden"
        android:screenOrientation="portrait"
        android:label="附近" >
        </activity>



        <activity android:name=".settings.Setting1Activity" />
        <activity android:name=".settings.Setting2Activity" />
        <activity android:name=".settings.Setting3Activity" />
        <activity android:name=".settings.Setting4Activity" />
        <activity android:name=".settings.Setting5Activity" />




        <activity android:name=".settings.Setting6Activity" />

        <activity android:name=".account.FriendsInfoActivity" />
        <activity android:name=".account.FriendChatActivity"/>
        <activity android:name=".account.FriendsSettingActivity"/>


        <activity
            android:name=".account.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/login_title"
            android:theme="@style/Default.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" >
            <intent-filter>
                <action android:name="com.socialmap.yy.travelbox.action.LOGIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chat.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Default.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" >
        </activity>
        <activity
            android:name=".chat.activity.ChatActivity"
            android:alwaysRetainTaskState="true"
            android:configChanges="locale|keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:theme="@style/Default.SwipeBack.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="ccom.socialmap.yy.travelbox.action.CHAT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:alwaysRetainTaskState="true"
            android:configChanges="locale|keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:hardwareAccelerated="true"
            android:launchMode="singleTop"
            android:theme="@style/Default.SwipeBack.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>

        <service android:name=".chat.service.XXService" />

        <receiver android:name=".chat.app.XXBroadcastReceiver" >
            <intent-filter>

                <!-- 开机广播 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- 关机广播 -->
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
                <!-- 网络连接变化的广播 -->
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".chat.db.ChatProvider"
            android:authorities="com.socialmap.yy.travelbox.provider.Chats" />
        <provider
            android:name=".chat.db.RosterProvider"
            android:authorities="com.socialmap.yy.travelbox.provider.Roster" />


        <activity
            android:name=".schedule.ScheduleLocalAddActivity"
            android:label="增加日程" >
        </activity>
        <activity
            android:name=".schedule.ScheduleLocalEditActivity"
            android:label="编辑日程" >
        </activity>


        <activity android:name=".schedule.ScheduleLocalCalendarActivity"
            android:label="日程安排总览">
        </activity>

        <activity
            android:name=".team.ChooseMapActivity"
            android:label="选择地点" >
        </activity>

        <activity android:name=".account.ContactActivity">
        </activity>

        <activity android:name=".account.OperateActivity">
        </activity>
        <activity android:name=".account.DetailActivity">
        </activity>
        <activity android:name=".DebugActivity"/>
        <service android:name=".service.SOSService">
        </service>

    </application>


</manifest>
